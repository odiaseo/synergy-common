{
    "name": "synergy/common",
    "description": "Library Abstract and concrete classes common to Synergy Modules",
    "license": "BSD-3-Clause",
    "keywords": [
        "synergy library",
        "abstract classes"
    ],
    "authors": [
        {
            "name": "Pele Odiase",
            "email": "peleodiase@yahoo.co.uk"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "laminas/laminas-component-installer": "^1.0 || ^0.3 || ^1.0.0-dev@dev",
        "zendframework/zendframework": "^3",
        "laminas/laminas-i18n-resources": "*",
        "doctrine/doctrine-orm-module": "^1.1",
        "laminas/laminas-mvc": "^3",
        "gedmo/doctrine-extensions": "^2.4",
        "monolog/monolog": "^2.2",
        "synergy/solarium-module": "*",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "laminas/laminas-development-mode": "^3.2",
        "satooshi/php-coveralls": "^2.2"
    },
    "suggest": {
        "monolog/monolog": "For enhanced logging features"
    },
    "autoload": {
        "psr-4": {
            "SynergyCommon\\": "src/SynergyCommon"
        },
        "psr-0": {
            "SynergyCommonTest": "tests/"
        },
        "classmap": [
            "./tests/SynergyCommonTest/Module.php",
            "./Module.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "secure-http": true
    }
}
