{
    "name": "synergy/common",
    "description": "Library Abstract and concrete classes common to Synergy Modules",
    "license": "BSD-3-Clause",
    "keywords": [
        "synergy library",
        "abstract classes"
    ],
    "authors": [
        {
            "name": "Pele Odiase",
            "email": "peleodiase@yahoo.co.uk"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "zendframework/zendframework": "2.*",
        "doctrine/doctrine-orm-module": ">=0.5",
        "doctrine/doctrine-module": ">=0.7",
        "gedmo/doctrine-extensions": ">=v2.2.0"
    },
    "suggest": {
        "ewgo/solarium-module": "For solr search aware models",
        "monolog/monolog": "For enhanced logging features"
    },
    "autoload": {
        "psr-0": {
            "SynergyCommon": "src/",
            "SynergyCommonTest": "tests/"
        },
        "classmap": [
            "./tests/Module.php",
            "./Module.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
