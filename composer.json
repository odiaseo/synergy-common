{
  "name": "synergy/common",
  "description": "Library Abstract and concrete classes common to Synergy Modules",
  "license": "BSD-3-Clause",
  "keywords": [
    "synergy library",
    "abstract classes"
  ],
  "authors": [
    {
      "name": "Pele Odiase",
      "email": "peleodiase@yahoo.co.uk"
    }
  ],
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "zendframework/zend-component-installer": "^1.0 || ^0.3 || ^1.0.0-dev@dev",
    "zendframework/zendframework": "^3",
    "zendframework/zend-i18n-resources": "*",
    "doctrine/doctrine-orm-module": "^1.1",
    "zendframework/zend-mvc": "^3",
    "gedmo/doctrine-extensions": "^2.4",
    "monolog/monolog": "^1.18",
    "synergy/solarium-module" : "^3.1"
  },
  "require-dev": {
    "zfcampus/zf-development-mode": "^3",
    "phpunit/phpunit": "~4.0",
    "satooshi/php-coveralls": "^1.0"
  },
  "suggest": {
    "monolog/monolog": "For enhanced logging features"
  },
  "autoload": {
    "psr-4": {
      "SynergyCommon\\": "src/SynergyCommon"
    },
    "psr-0": {
      "SynergyCommonTest": "tests/"
    },
    "classmap": [
      "./tests/SynergyCommonTest/Module.php",
      "./Module.php"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "secure-http": true
  }
}
