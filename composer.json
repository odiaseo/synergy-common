{
    "name": "synergy/common",
    "description": "Library Abstract and concrete classes common to Synergy Modules",
    "license": "BSD-3-Clause",
    "keywords": [
        "synergy library",
        "abstract classes"
    ],
    "authors": [
        {
            "name": "Pele Odiase",
            "email": "peleodiase@yahoo.co.uk"
        }
    ],
    "require": {
        "php": ">=8.1",
        "container-interop/container-interop": "^1.2",
        "doctrine/doctrine-orm-module": "*",
        "gedmo/doctrine-extensions": "*",
        "laminas/laminas-authentication": "*",
        "laminas/laminas-config": "*",
        "laminas/laminas-crypt": "*",
        "laminas/laminas-db": "*",
        "laminas/laminas-di": "*",
        "laminas/laminas-diactoros": "*",
        "laminas/laminas-dom": "*",
        "laminas/laminas-escaper": "*",
        "laminas/laminas-eventmanager": "*",
        "laminas/laminas-file": "*",
        "laminas/laminas-filter": "*",
        "laminas/laminas-http": "*",
        "laminas/laminas-hydrator": "*",
        "laminas/laminas-i18n": "*",
        "laminas/laminas-i18n-resources": "*",
        "laminas/laminas-inputfilter": "*",
        "laminas/laminas-loader": "*",
        "laminas/laminas-log": "*",
        "laminas/laminas-mail": "*",
        "laminas/laminas-math": "*",
        "laminas/laminas-memory": "*",
        "laminas/laminas-mime": "*",
        "laminas/laminas-modulemanager": "*",
        "laminas/laminas-mvc": "*",
        "laminas/laminas-mvc-plugins": "^1.2",
        "laminas/laminas-navigation": "*",
        "laminas/laminas-paginator": "*",
        "laminas/laminas-psr7bridge": "*",
        "laminas/laminas-serializer": "*",
        "laminas/laminas-servicemanager": "*",
        "laminas/laminas-session": "*",
        "laminas/laminas-soap": "*",
        "laminas/laminas-text": "*",
        "laminas/laminas-validator": "*",
        "laminas/laminas-view": "*",
        "monolog/monolog": "*",
        "synergy/solarium-module": "*",
        "zendframework/zend-debug": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "laminas/laminas-development-mode": "*",
        "php-coveralls/php-coveralls": "*"
    },
    "suggest": {
        "monolog/monolog": "For enhanced logging features"
    },
    "autoload": {
        "psr-4": {
            "SynergyCommon\\": "src/SynergyCommon"
        },
        "psr-0": {
            "SynergyCommonTest": "tests/"
        },
        "classmap": [
            "./tests/SynergyCommonTest/Module.php",
            "./Module.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "secure-http": true,
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true,
            "laminas/laminas-component-installer": true
        }
    }
}
