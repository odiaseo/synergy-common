{
  "name": "synergy/common",
  "description": "Library Abstract and concrete classes common to Synergy Modules",
  "license": "BSD-3-Clause",
  "keywords": [
    "synergy library",
    "abstract classes"
  ],
  "authors": [
    {
      "name": "Pele Odiase",
      "email": "peleodiase@yahoo.co.uk"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.5",
    "zendframework/zend-component-installer": "^1.0 || ^0.3 || ^1.0.0-dev@dev",
    "zendframework/zendframework": "^3.0.2",
    "zendframework/zend-i18n-resources": "*",
    "doctrine/doctrine-orm-module": "dev-master",
    "doctrine/doctrine-module": "dev-master",
    "zendframework/zend-mvc": "^3.0.2",
    "zfcampus/zf-development-mode": "^3.0",
    "gedmo/doctrine-extensions": "^2.4",
    "monolog/monolog": "^1.18"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "suggest": {
    "ewgo/solarium-module": "For solr search aware models",
    "monolog/monolog": "For enhanced logging features"
  },
  "autoload": {
    "psr-4": {
      "SynergyCommon\\": "module/SynergyCommon/src/"
    },
    "psr-0": {
      "SynergyCommon": "src/",
      "SynergyCommonTest": "tests/"
    },
    "classmap": [
      "./tests/SynergyCommonTest/Module.php",
      "./Module.php"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
